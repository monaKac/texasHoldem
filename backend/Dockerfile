# ---------- build stage ----------
FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
ARG TARGETARCH
RUN CGO_ENABLED=0 go build -o /poker-server .

# ---------- runtime stage ----------
FROM alpine:3.21
RUN apk add --no-cache ca-certificates
COPY --from=builder /poker-server /poker-server
EXPOSE 50051
ENTRYPOINT ["/poker-server"]
